                            <p>(@@@Html.DisplayFor(m => m.PerfilViewModel.Usuario, new { @id = "idUser", @class = "form-control" }))</p>
                            <br />
                            @Html.DisplayFor(m => m.PerfilViewModel.Endereco.Cidade, new { @type = "text", @name = "cidade", @id = "lblCidade" })
