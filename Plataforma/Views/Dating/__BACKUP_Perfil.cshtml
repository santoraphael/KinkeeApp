<div ng-controller="ExploreController" class="ng-scope">

    <div class="container-flex gutter-small">

        <div class="profile-container">

            <div id="leftPanel">
                <div class="userBoxProfile">
                    <div class="userImg aChangeAvatar">

                        @{
