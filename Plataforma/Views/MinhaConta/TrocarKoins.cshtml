            </div>

        </div>

    </div>

    <div class="container-flex">

        <div class="row ng-scope">

            <div class="non-subscribers-main">

                <div class="row">

                    <div class="col-md-7">
                        <div subscribe-injected="" remove-fix-screen="xl hd">
                            <div class="sl-modal sl-subscription-modal  undefined injected ng-scope">
                                <div class="modal-dialog">
                                    <div class="modal-content">

                                        <div class="modal-header ng-scope">
                                            <button type="button" class="sl-close" data-dismiss="modal" >×</button>

                                            <h4 class="modal-title ng-binding large primary text-center">
                                               Trocar Koins pela conta Premium
                                                <small class="ng-binding ng-scope">
                                                    Com Premium você faz muito mais na Kinkee
                                                </small>
                                            </h4>
                                        </div>

                                        <div class="modal-body  no-padding">

                                            <!-- Tabs -->
                                            <ul class="nav nav-pills nav-justified visible-lg visible-md">
                                                <!-- Dados do usuario -->
                                                <li class="active">
                                                    <a>
                                                        TROCAR <i class="icon"></i>
                                                    </a>
                                                </li>

                                                @*<li ng-class="{ active: $subscribe.isActiveTab('payment'), disabled: !$subscribe.subscribe.valid, 'tab-complete': $subscribe.payment.valid }" class="disabled">
                                                        <a ng-click="$subscribe.changeTabs($subscribe.TABS.PLANS, $subscribe.TABS.PAYMENT)">
                                                            Escolha a forma de pagamento                                <i class="icon"></i>
                                                        </a>
                                                    </li>*@
                                            </ul>

                                            <!-- Tab panes -->
                                            <div class="tab-content">

                                                <!-- Planos -->
                                                <div class="tab-pane ng-fade">

                                                    <div class="sl-subscription small-discount">

                                                        <h3 class="hidden-md hidden-lg text-center choose-plan">Clique no plano para escolher:</h3>

                                                        <ul class="plans-list">
                                                            <li>
                                                                <div class="highlight ng-scope">
                                                                    <style>
                                                                        .sl-modal.sl-subscription-modal.injected a
                                                                        {
                                                                            color: #fff !important;
                                                                        }
                                                                        .nav__sign-btn {
                                                                            background-color: #682C82;
                                                                            border-width: 0;
                                                                            color: #fff;
                                                                            font-size: 13px;
                                                                            padding: 5px 10px;
                                                                            font-weight: 400;
                                                                            text-transform: uppercase;
                                                                            letter-spacing: .5px;
                                                                            margin-bottom: 7px;
                                                                            color: #fff !important;
                                                                        }

                                                                            .nav__sign-btn:hover {
                                                                                color: #fff;
                                                                            }

                                                                            .nav__sign-btn::after {
                                                                                color: #fff;
                                                                            }
                                                                    </style>
                                                                    @if (ViewBag.Saldo >= 2136)
                                                                    {

                                                                        <div class="nav__sign ng-scope">
                                                                            <a href="" class="sl-btn nav__sign-btn" title="Trocar">
                                                                                Trocar
                                                                            </a>
                                                                        </div>
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="nav__sign ng-scope">
                                                                            <a href="" class="sl-btn nav__sign-btn js-comprar-koins-btn" title="Trocar">
                                                                                Faltam @{var valor = 2136 - ViewBag.Saldo;} <b>@valor</b> para poder trocar. Compre Koins clicando aqui
                                                                            </a>
                                                                        </div>
                                                                    }
                                                                </div>
                                                            </li>

                                                        </ul>

                                                    </div>

                                                </div>


                                            </div>

                                            <!-- Antifraude -->
                                        </div>

                                        <!-- ngIf: testimonials.length -->


                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>


                </div>

                <div class="row">
                    <div class="col-md-7">

                        <!-- Presentes enviados -->

                    </div>

                </div>

            </div>


        </div>



    </div>


